<h1>New Song</h1>

<%= form_with model: song do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% song.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :artist %><br>
    <%= form.text_area :artist %>
    <% song.errors.full_messages_for(:artist).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% song.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>